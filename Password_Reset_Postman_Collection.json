	"event": [
		{
			"listen": "test",
			"script": {
				"exec": [
					"// Script para extrair o token da resposta e salvar na variável global",
					"if (pm.response.code === 200) {",
					"    const response = pm.response.json();",
					"    if (response.resetLink) {",
					"        // Extrai o token do link de reset",
					"        const tokenMatch = response.resetLink.match(/token=([^&]+)/);",
					"        if (tokenMatch) {",
					"            pm.globals.set('token', tokenMatch[1]);",
					"            console.log('Token salvo:', tokenMatch[1]);",
					"        }",
					"    }",
					"}"
				],
				"type": "text/javascript"
			}
		}
